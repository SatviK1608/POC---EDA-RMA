{
  "name": "complaint-clone",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm-sale": "npx typeorm -d dist/sale/infrastructure/database/data-source.js",
    "typeorm-shipping": "npx typeorm -d dist/shipping/infrastructure/database/data-source.js",
    "typeorm-billing": "npx typeorm -d dist/billing/infrastructure/database/data-source.js",
    "typeorm": "npx typeorm -d dist/common/data-source.js",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:create": "typeorm migration:create",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "seed:run": "node dist/sale/infrastructure/database/scripts/seed.js && node dist/billing/infrastructure/database/scripts/seed.js && node dist/shipping/infrastructure/database/scripts/seed.js",
    "dispatch-messages-sales": "node dist/sale/infrastructure/message-bus/cli-commands/command-handler dispatch-messages",
    "handle-messages-sales": "node dist/sale/infrastructure/message-bus/cli-commands/command-handler handle-messages",
    "dispatch-messages-billing": "node dist/billing/infrastructure/message-bus/cli-commands/command-handler dispatch-messages",
    "handle-messages-billing": "node dist/billing/infrastructure/message-bus/cli-commands/command-handler handle-messages",
    "dispatch-messages-shipping": "node dist/shipping/infrastructure/message-bus/cli-commands/command-handler dispatch-messages",
    "handle-messages-shipping": "node dist/shipping/infrastructure/message-bus/cli-commands/command-handler handle-messages"
  
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@slynova/flydrive": "^1.0.3",
    "@slynova/flydrive-gcs": "^1.0.3",
    "amqplib": "^0.10.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "ejs": "^3.1.10",
    "jsonrepair": "^3.10.0",
    "nest-commander": "^3.15.0",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.6.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}